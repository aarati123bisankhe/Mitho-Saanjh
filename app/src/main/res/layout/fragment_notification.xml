<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F7EDDE"
    tools:context=".ui.fragment.NotificationFragment"
>

    <TextView
        android:id="@+id/appetizers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appetizers"
        android:textSize="20sp"
        android:textColor="#04115D"
        android:textStyle="bold"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Mushroom Choila" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 180" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Bhatmas Sadeko" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 130" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Paneer Tikka" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 350" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Aloo chop / veg pakora" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 150" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/maincourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Course"
        android:textSize="20sp"
        android:textColor="#04115D"
        android:textStyle="bold"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Khana Set" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 350" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Dhido Set" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 380" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Thakali Khana Set" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 480" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Chicken curry with Rice" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 500" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/drinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drinks"
        android:textSize="20sp"
        android:textColor="#04115D"
        android:textStyle="bold"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">


        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Lemonade" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 80" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Fresh Juice" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 220" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Lassi" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 150" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Beer" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 250" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/desserts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desserts"
        android:textSize="20sp"
        android:textColor="#04115D"
        android:textStyle="bold"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Lakhamari" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 100" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Khuwa" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 110" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Chocolate Mousse" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 180" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Fruit Salad" android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:maxLines="1" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₨ 150" android:textSize="16sp" android:textColor="#ff5722" android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
